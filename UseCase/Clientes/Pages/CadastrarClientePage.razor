@page "/cadastrar-cliente"
@using Enterprise.UseCase.Clientes.Model.Request;
@using Enterprise.UseCase.Shared.Components

<BreadCrumb Descricao="cadastrar novo cliente" Controle="cliente" Pagina="cadastrar"></BreadCrumb>

<PageTitle>Cadastrar Cliente</PageTitle>

<EditForm Model="model" >
 <DataAnnotationsValidator />
    <div class="row">
        <div class="col-md-6 mb-3">
            <div>
                <label for="razaoSocial" class="form-label">Razão Social</label>
                <input type="text" @bind-value="model.RazaoSocial" class="form-control" id="razaoSocial" />
                <ValidationMessage For=@(() => model.RazaoSocial) />

            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div>
                <label for="nomeFantasia" class="form-label">Nome Fantasia</label>
                <input type="text" @bind-value="model.NomeFantasia" class="form-control" id="nomeFantasia" />
                <ValidationMessage For=@(() => model.NomeFantasia) />

            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div>
                <label for="cnpj" class="form-label">CNPJ</label>
                <input type="text" @bind-value="model.CNPJ" class="form-control" id="cnpj" />
                <ValidationMessage For=@(() => model.CNPJ) />

            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div>
                <label for="site" class="form-label">site</label>
                <input type="text" @bind-value="model.Site" class="form-control" id="site" />
                <ValidationMessage For=@(() => model.Site) />

            </div>
        </div>
        <div class="col-12">
            <button class="btn btn-primary">Cadastrar</button>
        </div>
    </div>
</EditForm>

@code {
    ClienteCadastroPageModel model = new ClienteCadastroPageModel();
   
}

